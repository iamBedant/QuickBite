<resources>

    <style name="App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="App.Home">

    </style>

    <style name="App.Details">

    </style>

    <style name="App.Review">

    </style>

    <style name="App.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="App.Search">

    </style>


    <!--End of Activity Styling -->


    <style name="Widget.QuickBite" parent="android:Widget" />

    <style name="Widget.QuickBite.Toolbar">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:theme">@style/QuickBiteDarkOverlay</item>
    </style>

    <style name="QuickBiteDarkOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="Widget.QuickBite.Toolbar.SmallCapsTitle">

    </style>

    <style name="Widget.QuickBite.HomeToolbar" parent="Widget.QuickBite.Toolbar.SmallCapsTitle">
        <item name="android:background">@null</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="QuickBiteClickable">
        <item name="android:height">@dimen/btn_height</item>
        <item name="android:width">@dimen/btn_height</item>
        <item name="android:background">@drawable/mid_grey_ripple</item>
    </style>

    <style name="QuickBiteTappable">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/mid_grey_ripple</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="readable_text">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="restaurant_section">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="restaurant_section_header">
        <item name="android:textColor">@color/dribbble_super_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="restaurant_right_text">
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
    </style>


    <style name="restaurant_right_text_add">
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="restaurant_left_text">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/mid_grey_ripple</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


</resources>
