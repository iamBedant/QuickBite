<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/img_btn_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/mid_grey_ripple"
                    android:contentDescription="@string/c_d_get_direction_button"
                    android:paddingBottom="@dimen/imagebutton_top_padding"
                    android:paddingTop="@dimen/imagebutton_top_padding"
                    android:src="@drawable/common_google_signin_btn_icon_dark_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/img_btn_favourite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/mid_grey_ripple"
                    android:contentDescription="@string/c_d_add_to_my_favourite_button"
                    android:paddingBottom="@dimen/imagebutton_top_padding"
                    android:paddingTop="@dimen/imagebutton_top_padding"
                    android:src="@drawable/common_google_signin_btn_icon_dark_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/img_btn_zomato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/mid_grey_ripple"
                    android:contentDescription="@string/c_d_view_on_zomato_button"
                    android:paddingBottom="@dimen/imagebutton_top_padding"
                    android:paddingTop="@dimen/imagebutton_top_padding"
                    android:src="@drawable/common_google_signin_btn_icon_dark_normal" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.iambedant.nanodegree.quickbite.ui.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restaurant_details"
                android:textSize="@dimen/text_size_large"
                app:font="roboto-mono-regular" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.iambedant.nanodegree.quickbite.ui.views.FontTextView
                    android:id="@+id/tv_cuisines_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cuisines" />

                <com.iambedant.nanodegree.quickbite.ui.views.FontTextView
                    android:id="@+id/tv_cuisines"
                    tools:text="Cafe Amarican"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_cuisines_display" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>