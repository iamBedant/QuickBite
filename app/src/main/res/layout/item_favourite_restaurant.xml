<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cover_image"
            android:contentDescription="@string/restaurant_featured_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_view_height"
            android:scaleType="centerCrop"
            android:src="@drawable/home_bg" />

        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small">

            <com.iambedant.nanodegree.quickbite.ui.views.FontTextView
                android:id="@+id/tv_name"
                style="@style/restaurant_section_name"
                android:layout_width="0dp"
                app:font="SourceSansPro-Regular"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Restaurant name" />

            <com.iambedant.nanodegree.quickbite.ui.views.FontTextView
                android:id="@+id/tv_rating"
                android:layout_width="0dp"
                app:font="SourceSansPro-Regular"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4.5" />
        </LinearLayout>

        <com.iambedant.nanodegree.quickbite.ui.views.FontTextView
            android:id="@+id/tv_cuisines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            app:font="SourceSansPro-Light"
            android:paddingRight="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"/>

        <com.iambedant.nanodegree.quickbite.ui.views.FontTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            app:font="SourceSansPro-Light"
            android:paddingRight="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"/>

        <com.iambedant.nanodegree.quickbite.ui.views.FontTextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            app:font="SourceSansPro-Light"
            android:paddingRight="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"/>

        <include layout="@layout/view_restaurant_buttons" />


    </LinearLayout>
</android.support.v7.widget.CardView>